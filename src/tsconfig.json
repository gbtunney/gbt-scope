{
    "extends": "@snailicide/build-config/tsconfig-base",

    "compilerOptions": {
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "composite": false,
        "noEmit": true,
        "types": ["three"],
        "jsxFragmentFactory": "",
        "jsxFactory": "",
        "allowImportingTsExtensions": true,
        "exactOptionalPropertyTypes": false /*TODO: remove?*/,
        "jsx": "react-jsx",
        "allowJs": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
