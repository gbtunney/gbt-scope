        "rootDir": ".",
        "types": ["node"],
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": ["dom"],
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["/node_modules", "scratch", "**/*.tsx"],
    "include": ["./*.ts", "./.storybook/*.ts", "./*.mts", "./*.cts", "./*.json"]
}
