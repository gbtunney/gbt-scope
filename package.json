{
    "name": "gbt-scope",
    "private": false,
    "version": "0.0.0",
    "scripts": {
        "\n========== DEVELOPMENT >> ==========": "",
        "dev": "pnpm build:ts && pnpm dev:vite",
        "dev:storybook": "pnpm build:ts && pnpm exec storybook dev -p 6006",
        "dev:ts": "pnpm build:ts --watch",
        "dev:rollup": "rollup --watch --config ./rollup.config.js",
        "dev:vite": "pnpm exec vite --config ./vite.config.ts",
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:vite",
        "build:ts": "pnpm exec tsc --build",
        "build:storybook": "storybook build",
        "build:vite": "pnpm exec vite build --config ./vite.config.ts",
        "\n========== DOCS >> ==========": "",
        "docs": "pnpm run docs:build",
        "docs:build": "pnpm run build:storybook",
        "docs:serve": "pnpm run dev:storybook",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "pnpm exec tsc --build --clean",
        "clean:build": "pnpm exec rm -rf ./dist ./types storybook-static",
        "\n========== TEST >> ==========": "",
        "test": "echo '\"\\n===\\n>> Unit Test:: no test specified!'",
        "chromatic": "npx chromatic --project-token=chpt_6be402f4f5a7153 --build-script-name docs:build",
        "\n========== COMMIT >> ==========": "",
        "commit": "pnpm build:ts && pnpm exec git-cz",
        "prepare:all": "pnpm run fix",
        "\n========== LIFECYCLE >> ==========": "",
        "prepare": "husky",
        "pre:commit": "echo '\n===\n>> Todo:: enable `pnpm exec lint-staged --debug`'",
        "postinstall": "echo '\n=== >> Success:: Install complete.'",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm release:check && pnpm run prerelease && pnpm changeset",
        "prerelease": "pnpm run build && pnpm run fix && pnpm test && pnpm docs:build",
        "release:check": "pnpm release:check:clean && pnpm release:check:branch",
        "release:check:clean": "BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD) &&  if [ -n \"$(git status --porcelain)\" ]; then echo \"❌ Repository is not clean on branch '$BRANCH_NAME'. Please commit or stash your changes.\" && exit 1; fi",
        "release:check:branch": "BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD) && echo \"Current branch: $BRANCH_NAME\" && if [[ \"$BRANCH_NAME\" != release-candidate/* ]]; then echo \"❌ Branch '$BRANCH_NAME' is not prefixed with 'release-candidate/'.\" && exit 1; fi && echo \"✅ Repository is clean and branch '$BRANCH_NAME' is valid.\"",
        "\n========== DEPLOY >> ==========": "",
        "deploy": "pnpm deploy:check && pnpm prerelease && pnpm deploy:docs",
        "deploy:check": "BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD) && if [[ \"$BRANCH_NAME\" != main ]]; then echo \"❌ Deployment is only allowed on the 'main' branch. Current branch: '$BRANCH_NAME'.\" && exit 1; fi && if [ -n \"$(git status --porcelain)\" ]; then echo \"❌ Repository is not clean on branch '$BRANCH_NAME'. Please commit or stash your changes.\" && exit 1; fi && echo \"✅ Repository is clean and on the 'main' branch.\"",
        "deploy:docs": "cross-var scp -r $npm_package_config_docs_deploy_local $npm_package_config_docs_deploy_remote",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "cross-var prettier ./.husky/* --ignore-path ./.gitignore --no-error-on-unmatched-pattern {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --config $(git rev-parse --show-toplevel)/$npm_package_config_prettier_config",
        "lint": "cross-var eslint -c $(git rev-parse --show-toplevel)/$npm_package_config_eslint_config",
        "lint:md": "pnpm exec markdownlint-cli2 '{./*,./**/*}.md' '#**/node_modules/**' '#packages/test-package/**/*' ",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm check:self",
        "check:md": "pnpm run lint:md",
        "check:self": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm fix:self",
        "fix:md": "pnpm run lint:md --fix",
        "fix:self": "pnpm prettier --write && pnpm lint --fix",
        "\n========== UNINSTALL >> ==========": "",
        "uninstall": "pnpm run clean && pnpm uninstall:list && pnpm run uninstall:rm && pnpm run uninstall:lock",
        "uninstall:list": "find . -name 'node_modules' -type d -prune",
        "uninstall:rm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
        "uninstall:lock": "rm -f pnpm-lock.yaml && rm -f packages/**/pnpm-lock.yaml"
    },
    "dependencies": {
        "@babylonjs/core": "^8.4.0",
        "@babylonjs/gui": "^8.4.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^7.0.2",
        "@mui/material": "^7.0.2",
        "@react-hook/window-scroll": "^1.3.0",
        "@snailicide/g-library": "^1.2.0",
        "@types/node": "^22.15.2",
        "babylonjs-hook": "^0.1.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-timer-hook": "^4.0.5",
        "type-fest": "^4.40.1",
        "use-resize-observer": "^9.1.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.2",
        "@chromatic-com/storybook": "^3.2.6",
        "@commitlint/config-conventional": "^19.8.0",
        "@commitlint/cz-commitlint": "^19.8.0",
        "@commitlint/types": "^19.8.0",
        "@eslint-react/eslint-plugin": "^1.48.5",
        "@snailicide/build-config": "^1.4.1",
        "@storybook/addon-essentials": "^8.6.12",
        "@storybook/addon-interactions": "^8.6.12",
        "@storybook/addon-onboarding": "^8.6.12",
        "@storybook/blocks": "^8.6.12",
        "@storybook/experimental-addon-test": "^8.6.12",
        "@storybook/react": "^8.6.12",
        "@storybook/react-vite": "^8.6.12",
        "@storybook/test": "^8.6.12",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "@vitest/browser": "^3.1.2",
        "@vitest/coverage-v8": "^3.1.2",
        "chromatic": "^11.28.2",
        "commitizen": "^4.3.1",
        "commitlint": "^19.8.0",
        "cross-var": "^1.1.0",
        "eslint": "^9.25.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-storybook": "^0.12.0",
        "eslint-plugin-unicorn": "^59.0.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "knip": "^5.52.0",
        "playwright": "^1.52.0",
        "prettier": "^3.5.3",
        "prettier-plugin-jsdoc": "^1.3.2",
        "prettier-plugin-sh": "^0.17.2",
        "storybook": "^8.6.12",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.31.0",
        "vite": "^6.3.3",
        "vitepress": "^1.6.3",
        "vitest": "^3.1.2"
    },
    "engines": {
        "node": ">=20.0.0 <22.0.0",
        "pnpm": ">=10.0.0"
    },
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "homepage": "https://github.com/gbtunney/gbt-boilerplate",
    "repository": {
        "type": "git",
        "url": "https://github.com/gbtunney/gbt-boilerplate"
    },
    "config": {
        "docs": {
            "url": "https://kaleidoscope.snailicide.com",
            "deploy": {
                "remote": "bluehost:~/kaleidoscope.snailicide.com",
                "local": "./storybook-static/*"
            }
        },
        "prettier": {
            "extensions": "ts,tsx,js,cjs,mjs,cts,mts,sh,html,json,yaml,yml,graphql,md",
            "path": "*,**/*",
            "config": "prettier.config.js"
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": "*",
            "config": "eslint.config.js"
        },
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
